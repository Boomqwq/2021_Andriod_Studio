<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置透明背景色 -->
    <solid android:color="#01000000" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="2px"
        android:color="#01000000" />

    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
    <gradient
        android:angle="315"
        android:startColor="#540057EE"
        android:centerColor="#5286E0F1"
        android:endColor="#0009FCC3" />
</shape>